@page
@model EmployeeRazorView.Pages.EmployeeModel
@{

}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div class="container">
    <h3>Add Customer</h3>
    <hr />
    <br />
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Employee.EmployeeName"></label>
                <input asp-for="Employee.EmployeeName" class="form-control" />
                <span class="alert-danger" asp-validation-for="Employee.EmployeeName"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Employee.Gender"></label>
                <select asp-for="Employee.Gender" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Models.Genders>()">
                    <option value="">Please Select</option>
                </select>
                <span class="alert-danger" asp-validation-for="Employee.Gender"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Employee.DOB"></label>
                <input asp-for="Employee.DOB" class="form-control" />
                <span class="alert-danger" asp-validation-for="Employee.DOB"></span>
            </div>
        </div>

        <br />
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-default" href="/allcustomer">Cancel</a>
    </form>
</div>
